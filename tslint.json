{
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "build/**/*.js",
            "mock/**/*.js",
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "interface-name": [
            false,
            "never-prefix"
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "import-name": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "no-shadowed-variable": false,
        "array-type": [true, "array"]
    }
}
